{
  "name": "Number of People Targeted",
  "id": "1",
  "description": "Persons targeted by admin level 2",
  "source": "https://data.humdata.org/dataset/2016-humanitarian-needs-overview-hno-for-south-sudan-number-of-people-in-need-by-sector",
  "url": "https://data.humdata.org/dataset/84f5cc34-8a17-4e62-a868-821ff3725c0d/resource/e3c97e91-4965-4873-b56b-4442678c6e3a/download/2016-South-Sudan-People-Targeted_stacked.csv",
  "map": {
    "shapefile": {
      "url": "assets/json/south_sudan.geojson",
      "joinColumn": "admin2Name"
    },
    "layers": [
      {
        "type":["bubble","choropleth"],
        "joinColumn": "#adm2+name",
        "valueColumn": "#targeted",
        "threshold": [20000,40000,60000,80000,100000,120000],
        "colors": ["#ffffcc", "#ffeda0", "#fed976", "#feb24c", "#fd8d3c", "#fc4e2a"],
        "operations": [
           {
            "type": "select",
            "options": {
              "column": "#sector",
              "operator": "=",
              "value": "targeted"
            }
          }
        ]
      }
    ]
  },
  "charts": [
    {
      "name": "Number of People Targeted By Sector",
      "options": {
        "data": {
          "x": "#sector",
          "y": "#targeted",
          "type": "bar"
        },
        "axis": {
          "x": {
            "type": "category",
            "tick": {
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "operations": [
        {
          "type": "sum",
          "options": {
            "groupByColumn": "#sector",
            "statsColumn": "#targeted"
          }
        }
      ]

    }
  ]
}
