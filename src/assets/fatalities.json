{
  "name": "Fatalities from Conflict Events",
  "id": "4",
  "description": "Fatalities",
  "source": "https://data.humdata.org/dataset/south-sudan-crisis-map-explorer-data",
  "url": "https://data.humdata.org/dataset/84f5cc34-8a17-4e62-a868-821ff3725c0d/resource/a67b85ee-50b4-4345-9102-d88bf9091e95/download/acled_fatalities_southsudan_bydate.csv",
  "map": {
    "shapefile": {
      "url": "assets/json/south_sudan.geojson",
      "joinColumn": "admin2Name"
    },
    "layers": [
      {
        "type": ["bubble", "choropleth"],
        "joinColumn": "#adm2+name",
        "valueColumn": "#affected+killed+sum",
        "threshold": [2,5,10,20,50,100],
        "colors": ["#edf8fb","#bfd3e6","#9ebcda","#8c96c6","#8856a7","#810f7c"],
        "operations": [
          {
            "type": "sum",
            "options": {
              "groupByColumn": "#adm2+name",
              "statsColumn": "#affected+killed"
            }
          }
        ]
      }
    ]
  },
  "charts": [
    {
      "name": "Fatalities",
      "options": {
        "data": {
          "x": "#date",
          "y": "#affected+killed+sum",
          "type": "area"
        },
        "axis": {
          "x": {
            "type": "timeseries",
            "tick": {
              "format": "%B %Y",
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "nextIndex": "02",
      "operations": [
        {
          "type": "sort",
          "options": {
            "columns": "#date"
          }
        },
        {
          "type": "sum",
          "options": {
            "groupByColumn": "#date",
            "statsColumn": "#affected+killed"
          }
        }

      ]
    }
  ]
}
