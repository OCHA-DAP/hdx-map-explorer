{
  "name": "IDPs at adm1",
  "url": "http://data.hdx.rwlabs.org/dataset/2d3c4e22-4603-45b8-b231-82cc2d45abf2/resource/c51b69a0-5f2c-4598-aded-dc63095380fe/download/hdxsprint-dtm-adm1.csv",
  "map": {
    "shapefile": {
      "url": "/assets/json/gadm28_LCR_adm1.geojson",
      "joinColumn": "NAME_1"
    },
    "layers": [
      {
        "type":"choropleth",
        "joinColumn": "#adm1+name",
        "valueColumn": "#affected+displaced",
        "threshold": [1000,10000,50000,100000,500000,1000000],
        "colors": ["#ffffcc", "#ffeda0", "#fed976", "#feb24c", "#fd8d3c", "#fc4e2a", "#e31a1c", "#b10026"],
        "operations": [
           {
            "type": "select",
            "options": {
              "column": "#affected+type",
              "operator": "=",
              "value": "idp"
            }
          },
          {
            "type": "select",
            "options": {
              "column": "#date+bin",
              "operator": "=",
              "value": "2015-12-31"
            }
          }
        ]
      }
    ]
  },
  "charts": [
    {
      "name": "By Date",
      "options": {
        "data": {
          "x": "#date+bin",
          "type": "area"
        },
        "axis": {
          "x": {
            "type": "timeseries",
            "tick": {
              "format": "%B %Y",
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "operations": [
        {
          "type": "select",
          "options": {
            "column": "#affected+type",
            "operator": "=",
            "value": "idp"
          }
        },
        {
          "type": "sort",
          "options": {
            "columns": "#date+bin"
          }
        },
        {
          "type": "sum",
          "options": {
            "groupByColumn": "#date+bin",
            "avgColumn": "#affected+displaced"
          }
        }
      ]
    },
    {
      "name": "By Affected Type",
      "options": {
        "data": {
          "x": "#affected+type",
          "type": "bar"
        },
        "axis": {
          "x": {
            "type": "category",
            "tick": {
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "operations": [
        {
          "type": "select",
          "options": {
            "column": "#date+bin",
            "operator": "=",
            "value": "2016-02-29"
          }
        },
        {
          "type": "sum",
          "options": {
            "groupByColumn": "#affected+type",
            "avgColumn": "#affected+displaced"
          }
        }
      ]
    }
  ]
}
