{
  "name": "Estimated Total Population",
  "description": "Estimated Total population",
  "sourceUrl": "http://data.hdx.rwlabs.org/dataset/75ed82f7-b03d-47e4-ba9b-c746412effe9",
  "url": "http://data.hdx.rwlabs.org/dataset/75ed82f7-b03d-47e4-ba9b-c746412effe9/resource/020000e5-e7aa-4027-b58a-efe7396ff32e/download/ORS-Total-Population-v2.csv",
  "map": {
    "shapefile": {
      "url": "assets/json/crisis/lake-chad/boundaries.geojson",
      "joinColumn": "NAME_1"
    },
    "layers": [
      {
        "type": ["choropleth","bubble"],
        "joinColumn": "#adm1+name",
        "valueColumn": "#population",
        "threshold": [0,250000,1000000,3000000,5000000,10000000],  
        "colors": ["#b5eef3","#82dde5","#4fcad5","#2fa8b4","#197b84","#084e55"]
      }
    ],
    "columnNames":{
      "#country+name": "Country Name",
      "#adm1+name": "Region name",
      "#date": "Date",
      "#population": "Population"
    }
  },
    "charts": [
    {
      "name": "Baseline Population By Country",
      "options": {
        "data": {
          "x": "#country+name",
          "y": "#population+sum",
          "type": "bar",
          "names": {
            "#population+sum": "Population"
          }
        },
        "axis": {
          "x": {
            "type": "category",
            "tick": {
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "operations": [
        {
          "type": "sum",
          "options": {
            "groupByColumn": "#country+name",
            "statsColumn": "#population"
          }
        }
      ]
    }
  ]
}

