{
  "name": "Funding progress on latest appeal",
  "id": "6",
  "description": "Current funding as a percentage of current requirements",
  "source": "http://data.humdata.org/dataset/6c4260fe-35b9-4dcd-b963-babb0d49d42a",
  "url": "http://data.humdata.org/dataset/6c4260fe-35b9-4dcd-b963-babb0d49d42a/resource/3106b05f-e171-49ac-a353-d7b56aed918f/download/FTS-Appeals_v4.csv",
  "map": {
    "layers": [
      {
        "type":["chart-only"],
        "colors": ["#66ff66"]
      }
    ]
  },

  "charts": [
    {
      "name": "By Country",
      "options": {
        "data": {
          "x" : "#country+name",
          "y": "#x_requirement+x_percent+x_met",
          "type": "bar"
        },
        "axis": {
          "x": {
            "type": "category",
            "tick": {
              "rotate": 30
            },
            "height": 60
          }
        }
      },
      "operations": [
        {
          "type": "sort",
          "options": {
            "columns": "#date+end",
            "order": "desc"
          }
        },
        {
          "type": "remove-duplicates",
          "options": {
            "columns": ["#country+name"]
          }
        },
        {
          "type": "keep-remove",
          "options": {
            "keepColumns": ["#country+name","#x_requirement+x_percent+x_met"],
            "removeColumns": []
          }
        }
      ]
    }
  ]
}
